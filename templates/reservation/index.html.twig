{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <h5><label for="salle">Salle</label></h5>
                <select id="salle" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <h5><label for="theme">Thème</label></h5>
                <select id="theme" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <h5><label for="horaire">Créneau</label></h5>
            <input type="datetime-local" class="form-control" id="horaire">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <h5><label for="nbjoueur">Nombre de joueurs</label></h5>
                <input type="number" class="form-control" id="nbjoueur">
            </div>
            <div class="form-group col-md-6">
                <h5><label for="nbobstacle">Nombre d'obstacles (max 12)</label></h5>
                <input type="number" class="form-control" id="nbobstacle">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Valider</button>
        <button type="submit" class="btn btn-primary">Annuler</button>
    </form>
{% endblock %}
