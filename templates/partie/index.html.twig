{% extends 'base.html.twig' %}

{% block title %}Partie index{% endblock %}

{% block body %}

    <h1 align="center">Choisir un joueur</h1>
    <div align="center">
{% if clients %}
    {% for client in clients %}
            <a href="/client/{{ client.id }}/parties"><button>{{ client.prenom }} {{ client.nom }} </button></a>
    {% endfor %}
{% endif %}
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Partie</th>
                <th>Jour</th>
                <th>Nombre de joueurs</th>
                <th>Nombre d'obstacles</th>
                <th>Reussite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partie in parties %}
            <tr>
                <td>{{ partie.id }}</td>
                <td>{{ partie.jour ? partie.jour|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ partie.nbJoueurs }}</td>
                <td>{{ partie.nbObstacles }}</td>
                <td>{{ partie.reussite ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('partie_show', {'id': partie.id}) }}">show</a>
                    <a href="{{ path('partie_edit', {'id': partie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('partie_new') }}">Create new</a>
{% endblock %}
